	text-decoration underline

.tac
	text-align center

.taj
	text-align justify

.tar
	text-align right

.tal
	text-align left

.i
	font-style italic

.o
	font-style oblique

.n
	font-weight normal

.b, b, em
	font-weight bold

.tdu, u
	text-decoration underline

.tdo
	text-decoration overline

